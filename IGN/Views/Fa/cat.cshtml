                                     //    }
                                     //})
                                     
                                     Get50TopNews(page);
                                 }
                             });
                     }
                 });

                 return {
                     getXml: function () {
                         if (xml) return xml;
                         // else show some error that it isn't loaded yet;
                     }
                 };
             })();



        });
