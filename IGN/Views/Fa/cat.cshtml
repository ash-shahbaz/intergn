    <script>
        $(document).ready(function () {

            Get50TopNews(1);
            BindCategoryName();
            GetTopNewsFromSelectedCategoryName();



            function BindCategoryName()
            {
                //$.get("http://192.168.1.10:13311/api/tblCategories/1-" + categoryid +"", function (data, status) {
                //});
                    $("#TitleTopNews").append("پربیننده ترین اخبار   @ViewBag.CategoryName  در 24 ساعت گذشته ");
                    $("#titleHeadTop50News").append("اخبار  @ViewBag.CategoryName ");

                    
            }


            

            function GetTopNewsFromSelectedCategoryName() {

                $.getJSON("http://192.168.1.10:13311/api/Categories/1-@ViewBag.CategoryName-$1", function (result) {

                    var allCategory = $.parseJSON(result);

                   
                    $.each(allCategory, function (i, item) {

                        var time = "10";



                        var splitTitle = item.Title.replace("+", " ").replace("?", " ").replace("*", " ").replace(";", " ").replace(",", " ").replace(".", " ").replace(":", " ").replace("؛", " ").replace("؟", " ").replace("»", " ").replace("«", " ").replace("!", " ").replace("(", " ").replace(")", " ").replace("{", " ").replace("}", " ").replace("[", " ").replace("]", " ").replace("/", " ").replace("-", " ");

                        var SeoUrl = splitTitle.split(" ");

                        var url = "";

                        for (var i = 0; i < SeoUrl.length; i++) {

                            if (url.length > 80) {
                                break;
                            } else {
                                url += SeoUrl[i] + '-';
                            }
                        }
                        var $liTopNews = "<li><div class=\"item clearfix\"><div class=\"row\"><div class=\"col-md-1 col-xs-1 col-sm-1 no-padding\"><ul class=\"CategoriesNews\"><li class=\"float-left cursor-pointer\"><i class=\"fa fa-thumbs-o-up Like\" aria-hidden=\"true\"></i><span class=\"font-size-12\">" + item.Likes + "+</span></li></ul></div><div class=\"col-md-1 col-xs-1 col-sm-1 no-padding\"><ul class=\"CategoriesNews\"><li class=\"float-left cursor-pointer\"><i class=\"fa fa-thumbs-o-down UnLike\" aria-hidden=\"true\"></i><span class=\"font-size-12\">" + item.Unlike + "-</span></li></ul></div><div class=\"col-md-1 col-xs-1 col-sm-1 no-padding\"><ul class=\"CategoriesNews\"><li class=\"font-size-11\">" + time + " ساعت قبل</li></ul></div><div class=\"col-md-1 col-xs-1 col-sm-1 no-padding\"><ul class=\"CategoriesNews\"><li class=\"font-size-12\">" + item.rssname + "</li></ul></div><div class=\"col-md-8 col-xs-8 col-sm-8  no-padding\"><div><div class=\"boxin-right\"><span class=\"fa fa-angle-double-left HomeBoxes\" aria-hidden=\"true\"></span></div><h1 class=\"titleNews\"><a href=\"/fa/News/Sport/" + item.NewsID + "/" + url + "\" target=\"_blank\">" + item.Title + "</a></h1></div></div></div></div></li>";
                         $("#Top10News").append($liTopNews);

                    });
                });
            };
            function Get50TopNews(number) {
                $("#Top50News").empty();
                var url = "http://192.168.1.10:13311/api/Categories/1-@ViewBag.CategoryName-";
                var page = number;
                var combindUrl = url + page;
                $.getJSON(combindUrl , function (result) {



                    var allCategory = $.parseJSON(result);


                    $.each(allCategory, function (i, item) {

                        var time = "14";

                        var splitTitle = item.Title.replace("+", " ").replace("?", " ").replace("*", " ").replace(";", " ").replace(",", " ").replace(".", " ").replace(":", " ").replace("؛", " ").replace("؟", " ").replace("»", " ").replace("«", " ").replace("!", " ").replace("(", " ").replace(")", " ").replace("{", " ").replace("}", " ").replace("[", " ").replace("]", " ").replace("/", " ").replace("-", " ");

                        var SeoUrl = splitTitle.split(" ");

                        var url = "";

                        for (var i = 0; i < SeoUrl.length; i++) {

                            if (url.length > 80) {
                                break;
                            } else {
                                url += SeoUrl[i] + '-';
                            }
                        }

                        var $liTopNews = "<li><div class=\"item clearfix\"><div class=\"row\"><div class=\"col-md-1 col-xs-1 col-sm-1 no-padding\"><ul class=\"CategoriesNews\"><li class=\"float-left cursor-pointer\"><i class=\"fa fa-thumbs-o-up Like\" aria-hidden=\"true\"></i><span class=\"font-size-12\">" + item.Likes + "+</span></li></ul></div><div class=\"col-md-1 col-xs-1 col-sm-1 no-padding\"><ul class=\"CategoriesNews\"><li class=\"float-left cursor-pointer\"><i class=\"fa fa-thumbs-o-down UnLike\" aria-hidden=\"true\"></i><span class=\"font-size-12\">" + item.Unlike + "-</span></li></ul></div><div class=\"col-md-1 col-xs-1 col-sm-1 no-padding\"><ul class=\"CategoriesNews\"><li class=\"font-size-11\">" + time + " ساعت قبل</li></ul></div><div class=\"col-md-1 col-xs-1 col-sm-1 no-padding\"><ul class=\"CategoriesNews\"><li class=\"font-size-12\">" + item.RssName + "</li></ul></div><div class=\"col-md-8 col-xs-8 col-sm-8  no-padding\"><div><div class=\"boxin-right\"><span class=\"fa fa-angle-double-left HomeBoxes\" aria-hidden=\"true\"></span></div><h1 class=\"titleNews\"><a href=\"/fa/News/Sport/" + item.NewsID + "/" + url + "\" target=\"_blank\" >" + item.Title + "</a></h1></div></div></div></div></li>";
                        $("#Top50News").append($liTopNews);
                    });
                });
            };

             var dataStore = (function () {
                 var xml;

                 $.ajax({
                     type: "GET",
                     url: "http://192.168.1.10:13311/api/Pageination/1-@ViewBag.CategoryName",

                     success: function (data) {

                         console.log("R: " + data);

                         $("#altLists").asPaginator(data
                             , {

                                 currentPage: data / 4,
                                 itemsPerPage: 50,
                                 visibleNum: 10,
                                 resizeThrottle: 250,

                                 tpl: function () {
                                     return '<ul>{{first}}{{prev}}{{altLists}}{{next}}{{last}}</ul>';
                                 },
                                 components: {
                                     first: true,
                                     prev: true,
                                     next: true,
                                     last: true,
                                     altLists: true
                                 },
                                 onChange: function (page) {
                                     //var url = '' + page;
                                     //console.log('ajax request' + url)
                                     //$.ajax({
                                     //    url: url,
