

@{
    ViewBag.Title = "ثبت_آگهی";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head
{
    <link href="~/css/animate.min.css" rel="stylesheet" />
}

<div class="main-top">

    <div class="row">
        <div class="col-md-12">
            <div class="widget card topstyle">
                <div class="widget-content">
                    <div class="padding-top-15">


                        <!-- main -->
                        <section id="main" class="clearfix ad-details-page">
                            <div class="container">


                                <div class="adpost-details">
                                    <div class="row">

                                        <div class="col-md-8">
                                            <form action="#">
                                                <fieldset>
                                                    <div class="section postdetails">
                                                        <h4>جزئیات آگهی<span class="pull-left float-left">* فیلد های اجباری</span></h4>
                                                        <div class="form-group selected-product">
                                                            <ul class="select-category list-inline">
                                                                <li>
                                                                    <a href="ad-post.html">
                                                                        <span class="select">
                                                                            <img src="images/icon/2.png" alt="Images" class="img-responsive">
                                                                        </span>
                                                                        کامپیوتر و اینترنت
                                                                    </a>
                                                                </li>

                                                                <li class="active">
                                                                    <a href="#">تلفن همراه</a>
                                                                </li>
                                                            </ul>
                                                            <a class="edit" href="#"><i class="fa fa-pencil"></i>ویرایش</a>
                                                        </div>
                                                        <div class="row form-group">
                                                            <div class="col-sm-9 user-type">
                                                                <input type="radio" name="sellType" value="newsell" id="newsell"> <label for="newsell">خریدار</label>
                                                                <input type="radio" name="sellType" value="newbuy" id="newbuy"> <label for="newbuy">فروشنده</label>
                                                            </div>
                                                            <label class="col-sm-3">نوع آگهی<span class="required">*</span></label>
                                                        </div>
                                                        <div class="row form-group add-title">
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="text" placeholder="گوشی اپل مدل 8Plus بدون خط و خش">
                                                            </div>
                                                            <label class="col-sm-3 label-title">عنوان آگهی<span class="required">*</span></label>
                                                        </div>
                                                        <div class="row form-group add-image">
                                                            <div class="col-sm-9">
                                                                <h5><i class="fa fa-upload" aria-hidden="true"></i>عکس خود را انتخاب کنید<span>شما میتوانید چند تصویر ارسال کنید</span></h5>
                                                                <div class="upload-section dir-ltr">
                                                                    <label class="upload-image" for="upload-image-one">
                                                                        <input type="file" id="upload-image-one">
                                                                    </label>

                                                                    <label class="upload-image" for="upload-image-two">
                                                                        <input type="file" id="upload-image-two">
                                                                    </label>
                                                                    <label class="upload-image" for="upload-image-three">
                                                                        <input type="file" id="upload-image-three">
                                                                    </label>

                                                                    <label class="upload-image" for="upload-imagefour">
                                                                        <input type="file" id="upload-imagefour">
                                                                    </label>
                                                                </div>
                                                            </div>
                                                            <label class="col-sm-3 label-title">تصاویر آگهی<span>(از تمام جهات)</span> </label>
                                                        </div>
                                                        <div class="row form-group select-condition">
                                                            <div class="col-sm-9">
                                                                <input type="radio" name="itemCon" value="new" id="new">
                                                                <label for="new">نو</label>
                                                                <input type="radio" name="itemCon" value="used" id="used">
                                                                <label for="used">کارکرده</label>
                                                            </div>
                                                            <label class="col-sm-3">وضعیت<span class="required">*</span></label>
                                                        </div>
                                                        <div class="row form-group select-price">
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="text1">
                                                                <label>هزار تومان</label>
                                                                <input type="radio" name="price" value="negotiable" id="negotiable">
                                                                <label for="negotiable">توافقی </label>
                                                            </div>
                                                            <label class="col-sm-3 label-title">قیمت<span class="required">*</span></label>
                                                        </div>
                                                        <div class="row form-group brand-name">
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" placeholder="سونی">
                                                            </div>
                                                            <label class="col-sm-3 label-title">برند<span class="required">*</span></label>
                                                        </div>
                                                        <div class="row form-group additional">
                                                            <div class="col-sm-9">
                                                                <div class="checkbox dir-ltr">
                                                                    <label for="camera"><input type="checkbox" name="camera" id="camera">Dual Camera</label>
                                                                    <label for="dual-sim"><input type="checkbox" name="dual-sim" id="dual-sim">Dual SIM</label>
                                                                    <label for="3g"><input type="checkbox" name="3g" id="3g">4G</label>
                                                                    <label for="screen"><input type="checkbox" name="screen" id="screen">مالتی تاچ</label>
                                                                </div>

                                                            </div>
                                                            <label class="col-sm-3 label-title">سایر<span class="required">*</span></label>
                                                        </div>

                                                        <div class="row form-group model-name">
                                                            <div class="col-sm-9">
                                                                <input type="text" class="form-control" id="model" placeholder="اکسپریا z">
                                                            </div>
                                                            <label class="col-sm-3 label-title">مدل</label>
                                                        </div>

                                                        <div class="row form-group item-description">
                                                            <div class="col-sm-9">
                                                                <textarea class="form-control" id="textarea" placeholder="توضیحات کالای مربوطه" rows="8"></textarea>
                                                            </div>
                                                            <label class="col-sm-3 label-title">توضیحات<span class="required">*</span></label>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-sm-9 col-sm-offset-3">
                                                                <p>١٥٠ حرف</p>
                                                            </div>
                                                        </div>
                                                    </div><!-- section -->

                                                    <div class="section seller-info">
                                                        <h4>اطلاعات فروشنده</h4>
                                                        <div class="row form-group">
                                                            <div class="col-sm-9">
                                                                <input type="radio" name="sellerType" value="individual" id="individual">
                                                                <label for="individual">خریدار</label>
                                                                <input type="radio" name="sellerType" value="dealer" id="dealer">
                                                                <label for="dealer">فروشنده</label>
                                                            </div>
                                                            <label class="col-sm-3 label-title">نوع آگهی<span class="required">*</span></label>
                                                        </div>
                                                        <div class="row form-group">
                                                            <div class="col-sm-9">
                                                                <input type="text" name="name" class="form-control" placeholder="احمد شهباز">
                                                            </div>
                                                            <label class="col-sm-3 label-title">نام آگهی دهنده<span class="required">*</span></label>
                                                        </div>
                                                        <div class="row form-group">
                                                            <div class="col-sm-9 dir-ltr">
                                                                <input type="email" name="email" class="form-control" placeholder="hamshahri@gmail.com">
                                                            </div>
                                                            <label class="col-sm-3 label-title">آدرس ایمیل<span class="required">*</span></label>
                                                        </div>
                                                        <div class="row form-group">
                                                            <div class="col-sm-9 dir-ltr">
                                                                <input type="text" name="mobileNumber" class="form-control" placeholder="٠٩١٢٣٤٣٤٦٧٨">
                                                            </div>
                                                            <label class="col-sm-3 label-title">تلفن همراه<span class="required">*</span></label>
                                                        </div>
                                                        <div class="row form-group">
                                                            <div class="col-sm-9">
                                                                <input type="text" name="address" class="form-control" placeholder="تهران، میدان ولیعصر...">
                                                            </div>
                                                            <label class="col-sm-3 label-title">آدرس</label>
                                                        </div>
                                                    </div><!-- section -->

                                                    <div class="section">
                                                        <h4>انتخاب نوع آگهی</h4>
                                                        <p>جهت کسب اطلاعات بیشتر میتوانید<a href="#">تعرفه ها</a> را مطالعه نمایید.</p>
                                                        <ul class="premium-options">
                                                            <li class="premium">
                                                                <input type="radio" name="premiumOption" value="day-one" id="day-one">
                                                                <label for="day-one">آگهی روزانه</label>
                                                                <span class="float-price">٢٥٬٠٠٠ هزار تومان</span>
                                                            </li>
                                                            <li class="premium">
                                                                <input type="radio" name="premiumOption" value="day-two" id="day-two">
                                                                <label for="day-two">آگهی روز های زوج هفته</label>
                                                                <span class="float-price">٦٠٬٠٠٠ هزار تومان</span>
                                                            </li>
                                                            <li class="premium">
                                                                <input type="radio" name="premiumOption" value="day-three" id="day-three">
                                                                <label for="day-three">آگهی روز های فرد هفته</label>
                                                                <span class="float-price">٦٠٬٠٠٠ هزار تومان</span>
                                                            </li>
                                                            <li class="premium">
                                                                <input type="radio" name="premiumOption" value="day-four" id="day-four">
                                                                <label for="day-four">آگهی تمام هفته</label>
                                                                <span class="float-price">١٠٠٬٠٠٠ هزار تومان</span>
                                                            </li>
                                                        </ul>
                                                    </div><!-- section -->

                                                    <div class="checkbox section agreement accept">
                                                        <label for="send">
                                                            <input type="checkbox" name="send" id="send">
                                                            تمام<a href="#">قوانین</a> و <a href="#">مقررات</a> راهنمای همشهری را خوانده ام و قبول دارم
                                                        </label>
                                                        <button type="submit" class="btn btn-primary float-left">ارسال آگهی</button>
                                                    </div><!-- section -->

                                                </fieldset>
                                            </form><!-- form -->
                                        </div>




                                    </div><!-- photos-ad -->
                                </div>
                            </div><!-- container -->
                        </section><!-- main -->





                    </div>
                </div>
            </div>
        </div>
    </div>


</div>






