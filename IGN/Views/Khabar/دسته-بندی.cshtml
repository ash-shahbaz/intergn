@using IGN.Models;
@{
    ViewBag.Title = "cat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head
{

    <link href="~/css/pagination.css" rel="stylesheet" />
    <link href="~/css/categories.css" rel="stylesheet" />
    <link href="~/css/chartist.min.css" rel="stylesheet" />
